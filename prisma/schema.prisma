generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum PhoneModel {
  iphonex
  iphone11
  iphone12
  iphone13
  iphone14
  iphone15
}

enum CaseMaterial {
  silicone
  polycarbonate
}

enum CaseFinish {
  smooth
  textured
}

enum PhoneColor {
  black
  blue
  red
  pink
}

model Configuration {
  id      String @id @default(cuid())
  imgUrl String
  width   Int 
  height  Int
  model PhoneModel?
  color PhoneColor?
  material CaseMaterial?
  finish CaseFinish?
  croppedImgUrl String?
}

